#!/usr/bin/env bash
echo "Running script.sh.erb script"

echo "module purge"
module purge

# load ansys Server
echo "module load"
module load ANSYS/<%= context.ansysver %>
export ANSOFTD_LICENSE_FILE=$(awk -F= '/^ANSYSLI_SERVERS=/ {print $2}'  <%= context.ansyslic %>)
export ANSYSLMD_LICENSE_FILE=$ANSOFTD_LICENSE_FILE


TMPDIR="$(mktemp -d)"


# Launch the Fluent Server
echo "Starting up Fluent..."
set -x
fluent <%= context.is3d %><%= context.prescision %> <%= context.ismeshing %> -mpi=openmpi -nm -ws -ws-port=5000 -ws-portspan=0
